{
  "name": "opencode-service-ts",
  "version": "0.1.0",
  "description": "Multi-tenant OpenCode-as-a-Service HTTP API",
  "author": "Damir Manapov",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/src/main.js",
    "start:prod": "node dist/src/main.js",
    "test": "vitest run",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:all": "vitest run && vitest run --config vitest.config.e2e.ts",
    "test:watch": "vitest",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "check:only": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@opencode-ai/sdk": "^1.1.25",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "openai": "^6.16.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  }
}
